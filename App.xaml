<Application x:Class="BlueEyes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bg="clr-namespace:Bluegiga"
             xmlns:local="clr-namespace:BlueEyes"
             xmlns:views="clr-namespace:BlueEyes.Views"
             xmlns:models="clr-namespace:BlueEyes.Models"
             xmlns:properties="clr-namespace:BlueEyes.Properties"
             StartupUri="Views/MainWindowView.xaml"
             ShutdownMode="OnMainWindowClose">
    
    <Application.Resources>
        <bg:BGLib x:Key="BGLib"/>
        <models:SerialPortCollection x:Key="SerialPortList"/>
        <models:BLEPeripheralCollection x:Key="DiscoveredPeripherals"/>
        <models:BLEPeripheralCollection x:Key="ConnectedPeripherals"/>
        <properties:Settings x:Key="Settings"/>
    </Application.Resources>
</Application>
