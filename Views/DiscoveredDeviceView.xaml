<UserControl x:Class="BlueEyes.Views.DiscoveredDeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlueEyes.Views"
             mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="discoveredDevicesTemplate">
            <DockPanel DockPanel.Dock="Top">
                <StackPanel Orientation="Vertical">
                    <Label Content="{Binding Path=Name}" Margin="0,-6"/>
                    <Label Content="{Binding Path=AddressString}" Margin="0,-6" FontSize="10" />
                </StackPanel>
                <Button DockPanel.Dock="Right" Content="{Binding Path=ConnectAction}" Width="80" HorizontalAlignment="Right"/>
            </DockPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <DockPanel>
        <ListBox ItemsSource="{Binding DiscoveredDevices}" ItemTemplate="{StaticResource discoveredDevicesTemplate}"/>
    </DockPanel>
</UserControl>
